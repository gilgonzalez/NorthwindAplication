             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Northwind.Presentation.Views.Reports"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Text="Pedidos por fecha" FontWeight="Bold" FontSize="20" FontFamily="Garamond" HorizontalAlignment="Center"></TextBlock>
        </DockPanel>
       
        <!-- Añadir dos controles tipo fecha para poder filtrar el report-->
        <!-- Añadir el reportViewer-->

    </Grid>
</UserControl>
